@page "/"

<PageTitle>Shoelace Styles Demo | Home</PageTitle>

<ShoelaceTabGroup @ref="_tabs" State="_state">
    <ShoelaceTab Panel="general">General</ShoelaceTab>
    <ShoelaceTab Panel="closable-1" Closable>Closable 1</ShoelaceTab>
    <ShoelaceTab Panel="closable-2" Closable>Closable 2</ShoelaceTab>
    <ShoelaceTab Panel="closable-3" Closable>Closable 3</ShoelaceTab>

    <ShoelaceTabPanel Name="general">This is the general tab panel. </ShoelaceTabPanel>
    <ShoelaceTabPanel Name="closable-1">This is the first closable tab panel.</ShoelaceTabPanel>
    <ShoelaceTabPanel Name="closable-2">This is the second closable tab panel.</ShoelaceTabPanel>
    <ShoelaceTabPanel Name="closable-3">This is the third closable tab panel.</ShoelaceTabPanel>
</ShoelaceTabGroup>

<ShoelaceButton Disabled="@_state.IsFirstActive" @onclick="PreviousAsync">
    Previous
</ShoelaceButton>

<ShoelaceButton Disabled="@_state.IsLastActive" @onclick="NextAsync">
    Next
</ShoelaceButton>

@code
{
    private ShoelaceTabGroup _tabs = default!;
    private ShoelaceTabState _state = new();

    public int ActiveIndex { get; set; }

    public async Task NextAsync()
    {
        await _tabs.NextAsync();
    }

    public async Task PreviousAsync()
    {
        await _tabs.PreviousAsync();
    }
}