@namespace Shoelace.Style.Components
@inherits ShoelaceCheckbox

<sl-switch @ref="Element"
           class="@Class"
           id="@Id"
           style="@Style"
           default-value="@DefaultValue"
           disabled="@Disabled"
           form="@Form"
           help-text="@HelpText"
           name="@Name"
           required="@Required"
           size="@Size"
           value="@Value"
           checked="@Checked"
           default-checked="@DefaultChecked"
           @onslcheckedchange="CheckedChangeHandlerAsync"
           @attributes="AdditionalAttributes">
    @Label
</sl-switch>