@namespace Shoelace.Style.Components
@inherits ShoelaceInputBase<string?>

<sl-color-picker @ref="Element"
                 id="@Id"
                 class="@Class"
                 style="@Style"
                 default-value="@DefaultValue"
                 disabled="@Disabled"
                 form="@Form"
                 help-text="@HelpText"
                 label="@Label"
                 name="@Name"
                 required="@Required"
                 size="@Size"
                 value="@Value"
                 format="@Format"
                 hoist="@Hoist"
                 inline="@Inline"
                 no-format-toggle="@NoFormatToggle"
                 opacity="@Opacity"
                 uppercase="@Uppercase"
                 @onslchange="ChangeHandlerAsync"
                 @onslblur="BlurHandlerAsync"
                 @onslfocus="FocusHandlerAsync"
                 @attributes="AdditionalAttributes"></sl-color-picker>