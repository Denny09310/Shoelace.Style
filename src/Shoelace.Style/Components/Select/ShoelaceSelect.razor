@namespace Shoelace.Style.Components
@inherits ShoelaceInputBase<TValue>
@typeparam TValue

<sl-select @ref="Element"
           @attributes="AdditionalAttributes"
           id="@Id"
           class="@Class"
           style="@Style"
           default-value="@DefaultValue"
           disabled="@Disabled"
           form="@Form"
           help-text="@HelpText"
           label="@Label"
           name="@Name"
           required="@Required"
           size="@Size"
           value="@(Value is IEnumerable<object> enumerable ? string.Join(" ", enumerable) : Value)"
           clearable="@Clearable"
           filled="@Filled"
           hoist="@Hoist"
           max-options-visible="@MaxOptionsVisible"
           multiple="@Multiple"
           open="@Open"
           pill="@Pill"
           placeholder="@Placeholder"
           placement="@Placement"
           @onslchange="ChangeHandlerAsync"
           @onslinvalid="InvalidHandlerAsync"
           @onslclear="ClearHandlerAsync"
           @onslblur="BlurHandlerAsync"
           @onslfocus="FocusHandlerAsync"
           @onslshow="ShowHandlerAsync"
           @onslaftershow="AfterShowHandlerAsync"
           @onslhide="HideHandlerAsync"
           @onslafterhide="AfterHideHandlerAsync">
    @ChildContent
</sl-select>