@namespace Shoelace.Style.Components
@inherits ShoelaceComponentBase
@typeparam TValue

<sl-radio @ref="Element"
          id="@Id"
          class="@Class"
          style="@Style"
          disabled="@Disabled"
          size="@Size"
          value="@Value"
          @onslblur="BlurHandlerAsync"
          @onslfocus="FocusHandlerAsync"
          @attributes="AdditionalAttributes">
    @ChildContent
</sl-radio>