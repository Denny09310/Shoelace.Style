@namespace Shoelace.Style.Components
@inherits ShoelacePresentableBase

<sl-alert @ref="Element"
          id="@Id"
          class="@Class"
          style="@Style"
          closeable="@Closable"
          countdown="@Countdown"
          duration="@Duration?.ToString(CultureInfo.InvariantCulture)"
          open="@Open"
          variant="@Variant"
          @onslshow="ShowHandlerAsync"
          @onslaftershow="AfterShowHandlerAsync"
          @onslhide="HideHandlerAsync"
          @onslafterhide="AfterHideHandlerAsync"
          @attributes="AdditionalAttributes">
    @ChildContent
</sl-alert>