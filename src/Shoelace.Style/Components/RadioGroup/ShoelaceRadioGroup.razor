@namespace Shoelace.Style.Components
@inherits ShoelaceInputBase<TValue>
@typeparam TValue

<sl-radio-group @ref="Element"
                @attributes="AdditionalAttributes"
                id="@Id"
                class="@Class"
                style="@Style"
                form="@Form"
                help-text="@HelpText"
                label="@Label"
                name="@Name"
                required="@Required"
                size="@Size"
                value="@Value"
                @onslchange="ChangeHandlerAsync"
                @onslinvalid="InvalidHandlerAsync">
    @ChildContent
</sl-radio-group>