@namespace Shoelace.Style.Components
@inherits ShoelaceInputBase<TValue>
@typeparam TValue

<sl-rating @ref="Element"
           @attributes="AdditionalAttributes"
           class="@Class"
           id="@Id"
           style="@Style"
           value="@FormattedValue"
           disabled="@Disabled"
           label="@Label"
           max="@Max?.ToString(CultureInfo.InvariantCulture)"
           precision="@Precision?.ToString(CultureInfo.InvariantCulture)"
           readonly="@Readonly"
           @onslchange="ChangeHandlerAsync"
           @onslinvalid="InvalidHandlerAsync"
           @onslblur="BlurHandlerAsync"
           @onslfocus="FocusHandlerAsync"
           @onslhover="HoverHandlerAsync"></sl-rating>