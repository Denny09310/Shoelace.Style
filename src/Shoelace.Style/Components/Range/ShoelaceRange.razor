@namespace Shoelace.Style.Components
@inherits ShoelaceInputBase<TValue>
@typeparam TValue

<sl-range @ref="Element"
          @attributes="AdditionalAttributes"
          class="@Class"
          id="@Id"
          style="@Style"
          name="@Name"
          value="@FormattedValue"
          label="@Label"
          help-text="@HelpText"
          disabled="@Disabled"
          min="@Min?.ToString(CultureInfo.InvariantCulture)"
          max="@Max?.ToString(CultureInfo.InvariantCulture)"
          step="@Step?.ToString(CultureInfo.InvariantCulture)"
          tooltip="@Tooltip"
          form="@Form"
          default-value="@DefaultValue"
          @onslchange="ChangeHandlerAsync"
          @onslinvalid="InvalidHandlerAsync"
          @onslblur="BlurHandlerAsync"
          @onslfocus="FocusHandlerAsync">
    @ChildContent
</sl-range>