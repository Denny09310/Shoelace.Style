@namespace Shoelace.Style.Components
@inherits ShoelaceInputBase<bool>

<sl-checkbox @ref="Element"
             id="@Id"
             class="@Class"
             style="@Style"
             default-value="@DefaultValue"
             disabled="@Disabled"
             form="@Form"
             help-text="@HelpText"
             name="@Name"
             required="@Required"
             size="@Size"
             value="@Value"
             checked="@Checked"
             default-checked="@DefaultChecked"
             indeterminate="@Indeterminate"
             @onslcheckedchange="CheckedChangeHandlerAsync"
             @attributes="AdditionalAttributes">
    @Label
</sl-checkbox>