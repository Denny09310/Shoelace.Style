@namespace Shoelace.Style.Components
@inherits ShoelaceInputBase<string?>

<sl-input @ref="Element"
          id="@Id"
          class="@Class"
          style="@Style"
          default-value="@DefaultValue"
          disabled="@Disabled"
          form="@Form"
          help-text="@HelpText"
          label="@Label"
          name="@Name"
          required="@Required"
          size="@Size"
          value="@Value"
          autocapitalize="@AutoCapitalize"
          autocorrect="@AutoCorrect"
          autofocus="@AutoFocus"
          clearable="@Clearable"
          enterkeyhint="@EnterKeyHint"
          filled="@Filled"
          inputmode="@InputMode"
          max="@Max?.ToString(CultureInfo.InvariantCulture)"
          maxlength="@MaxLength"
          min="@Min?.ToString(CultureInfo.InvariantCulture)"
          minlength="@MinLength"
          no-spin-buttons="@NoSpinButtons"
          password-toggle="@PasswordToggle"
          password-visible="@PasswordVisible"
          pattern="@Pattern"
          pill="@Pill"
          placeholder="@Placeholder"
          readonly="@Readonly"
          spellcheck="@Spellcheck"
          step="@Step"
          type="@Type"
          @onslchange="ChangeHandlerAsync"
          @onslinput="InputHandlerAsync"
          @onslinvalid="InvalidHandlerAsync"
          @onslclear="ClearHandlerAsync"
          @attributes="AdditionalAttributes">
    @ChildContent
</sl-input>